  build-depends:       base >=4.9 && <4.10, 
                       containers >=0.5 && <0.6,
                       HUnit >=1.5 && <1.6,
                       array >=0.5 && <0.6,
                       mtl >=2.2 && <2.3,
                       text >=1.2 && <1.3,
                       bytestring >=0.10 && <0.11,
                       safe >=0.3 && <0.4, 
                       deepseq >=1.4 && <1.5,
                       hashable >=1.2 && <1.3,
                       stm >=2.4 && <2.5,
                       async >=2.1 && <2.2,
                       ghc-prim >=0.5 && <0.6
  
  hs-source-dirs:      src, protolude/src
  
  default-language:    Haskell2010

  default-extensions: NoImplicitPrelude
  
source-repository head
  type:              github
  location:          https://github.com/lsund/edmonds-matching
